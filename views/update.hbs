<main class="register">

    <a href="/users/profile">
    
        <img class="icon" src="/public/assets/icons/back.svg" alt="">
    </a>
    <h1>Update your account</h1>

    <form action="/users/update" method="post"> <!--enctype="multipart/form-data"-->
        <label class="mobile-register" for="firstname">First name:</label><br>
        <input type="text" name="firstname" value="{{firstname}}" required><br>

        <label class="mobile-register" for="lastname">Last name:</label><br>
        <input type="text" name="lastname" value="{{lastname}}" required><br> <!--placeholder="Last name"-->

        <label class="mobile-register" for="age">Age:</label><br>
        <input type="number" name="age" placeholder="age" value="{{age}}" required><br>

        <label class="mobile-register" for="email">Email:</label><br>
        <input type="email" name="email" placeholder="Email" value="{{email}}" required><br>

